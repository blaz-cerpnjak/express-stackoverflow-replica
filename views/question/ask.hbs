{{> header }}

<div class="container">
    <div class="row">
        <div class="col-8">
            <h3>Ask a public question</h3>
            <br>
            <!-- Ask a question form -->
            <form action="/questions" method="post">
                <!-- Title -->
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <p><small>Be specific and imagine youâ€™re asking a question to another person</small></p>
                    <input type="text" class="form-control" name="title" placeholder="e.g. Is there an R function for finding the index of an element in a vector?">
                </div>
                <!-- Body -->
                <div class="mb-3">
                    <label class="form-label">Body</label>
                    <p><small>Include all the information someone would need to answer your question</small></p>
                    <textarea name="description" class="form-control" rows="8"></textarea>
                </div>
                <!-- Tags-->
                <div class="mb-3">
                    <label class="form-label">Tags</label>
                    <p><small>Add up to 5 tags to describe what your question is about</small></p>
                    <input type="text" name="tags" class="form-control" placeholder="e.g. asp.net xcode swift">
                </div>
                <!-- Answer your own question -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label">Answer your own question</label>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
        <div class="col-4">

        </div>
    </div>
</div>