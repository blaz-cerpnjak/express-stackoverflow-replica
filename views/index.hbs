{{> header}}

<div class="container">
    <div class="row">
        <div class="col-2">

        </div>
        <div class="col-7">
            <!-- Header -->
            <div class="row">
                <div class="col">
                    <h3>All Questions</h3>
                    <br>
                    <p>{{data.questionsCount}}</p>
                    <br>
                </div>
                <div class="col text-right">
                    <a href="/questions/ask" type="button" class="btn btn-primary">Ask Question</a>
                </div>
            </div>
            <!-- Header -->
            <!-- List all questions -->
            {{#each data.questions}}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{tags}}</p>
                        <a href="../questions/{{_id}}" class="btn btn-primary">Details</a>
                    </div>
                    <div class="card-footer text-muted">
                        {{formattedDate}}
                    </div>
                </div>
                <br>
            {{/each}}
            <!-- List all questions -->
        </div>
